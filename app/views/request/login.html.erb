
<div class="container-fluid">
  <div class="row-fluid">

    <div class="span6">
      <% if !@site_content.blank? %>
        <% if !@site_content.logos.blank? %>
          <%= image_tag(@site_content.logos.status_active.first.image_url, style: "height: 100px;") rescue nil %>
        <% else %>
          <h3 class="brand" style="color: gray;">SwigBIG</h3>
        <% end %>
      <% else %>
        <h3 class="brand" style="color: gray;">SwigBIG</h3>
      <% end %>
      <h2>Invitation Login</h2>
    </div>

    <div class="span5" style="margin-top: 20px;">
      <%= simple_form_for(:request_user, url: login_to_swigbig_request_url) do |f| %>
        <div style="margin-left: -163px;">
          <%= f.input  :email, label: false, placeholder: "Email" %>
          <%= f.input  :enter_key, label: false, placeholder: "Enter Key" %>
        </div>
        <%= f.submit "Login", class: "btn-success" %>
        <% end %>
      </div>
    </div>
  </div>
