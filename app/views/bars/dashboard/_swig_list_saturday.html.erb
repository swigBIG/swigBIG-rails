                  <%= render partial: "bigswig_list" %>
                </div>
                <%= number_field_tag "peoples[]" %>
                <br/>
                <br/>
              <% end %>
              <%= hidden_field_tag :swig_type, "Big" %>
              <%= hidden_field_tag :swig_day, "Saturday" %>
              <div class="modal-footer">
                <%= f.submit "Create Swig", class: "btn-primary" %>
                </div>
              <% end %>
            </div>
          </div>

          <div id="update_saturday_big_swig" class="modal hide fade">
            <div class="modal-header">
              <a class="close" data-dismiss="modal"><b>x</b></a>
              <h4>Update Big Swig on Saturday</h4>
            </div>
            <div class="modal-body well">
              <!--<div class="span8">
          <%#= simple_form_for(:big_swig_list, url: bars_add_bigswig_list_on_update_path, html: {:class => "form-horizontal", remote: true}) do |f| %>
                  <div id="add_list">
          <%#= f.input :big_swig, label: false, input_html: {style: "margin-left: -170px;width: 380px;"} %>
                  </div>
          <%#= f.submit "Add to List", class: "btn-success pull-right", style: "margin-top: -45px;" %>

          <%# end %>
                </div>-->
              <%= simple_form_for(:swig, url: bars_update_big_swig_path, html: { :class => "form-horizontal"}) do |f| %>
                <% @swigs_saturday.big.each do |swig|%>
                  <%= hidden_field_tag "swig_ids[]", swig.id %>
              <%#*<div id="bigswig_lists_on_update">%>
              <%#= render partial: "bigswig_list_on_update" %>
                  <%= select_tag "deals[]", options_for_select(bigswig_collection), prompt: swig.deal, style: "width: 500px;margin-bottom: 3px;" %>
              <%#*</div>%>
                  <!--<div id="bigswig_lists">
              <%#= render partial: "bigswig_list" %>
                  </div>-->
              <%#= text_field_tag "deals[]", swig.deal, style: "width: 500px; height: 23px;margin-bottom: 3px;" %>
                  <%= number_field_tag "people[]", swig.people, style: "width: 100px;margin-bottom: 3px;" %>
                <% end %>
              </div>
              <div class="modal-footer">
                <%= f.submit "Update Swig", class: "btn-primary" %>
                </div>
              <% end %>
            </div>
          <% end %>