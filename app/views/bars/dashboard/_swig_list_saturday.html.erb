<script type="text/javascript">
  function saturday_clear_list(){
    $("#saturday_notice_lists").text("")
  }
</script>

<% unless @swigs_saturday.standard.blank? %>
  <% @swigs_saturday.standard.each do |swig|%>
    <h4>Standard Swig</h4>
    <div class="span8 pull-left">
      <%= n_line(swig.deal) rescue nil %>
    </div>
    <div class="span2 pull-left">
      <a href="#edit_saturday_standard_swig<%= swig.id %>" data-toggle="modal" ><b>Update</b></a>
    </div>
    <%= content_for :outer do %>
      <div id="edit_saturday_standard_swig<%= swig.id %>" class="modal hide fade">
        <div class="modal-header">
          <a class="close" data-dismiss="modal"><b>x</b></a>
          <h4>Standard Swig on Saturday</h4>
        </div>
        <div class="modal-body well">
          <%= simple_form_for(Swig.find(swig.id), url: bars_update_swig_path(swig.id), method: :post, html: { :class => "form-horizontal"} ) do |f| %>
            <%= f.input :deal, as: :text, :label => false, input_html: { style: "width: 300px;height: 100px" } %>
            <div class="form-actions">
              <%= f.submit "Update Swig", class: "btn-primary" %>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    <% end %>

  <% else %>
    <h4>Standard Swig</h4>
    <div class="span10">
      <p>Your Standard Swigs have not been setup for this day</p>
      <br/>
      <a href="#saturday_standard_swig" data-toggle="modal" >Set them up now?</a>
    </div>
  <% end %>
  <div class="clearfix"></div>
  <% unless @swigs_saturday.big.blank? %>
    <h4>Big Swig</h4>
    <div class="span2 pull-left">
      <a href="#update_saturday_big_swig" data-toggle="modal" >Update</a>
    </div>
    <div class="clearfix"></div>
    <br/>
    <% @swigs_saturday.big.each do |swig|%>
      <div class="clearfix"></div>
      <div class="span7 pull-left">
        <%= n_line(swig.deal) %>
      </div>
      <div class="span2 pull-right">
        <b>/</b><%= swig.people %>
      </div>
      <div class="clearfix"></div>
      <br/>
    <% end %>
  <% else %>
    <h4>Big Swig</h4>
    <a href="#saturday_big_swig" data-toggle="modal" >Set them up now?</a>
  <% end %>


  <%= content_for :outer do %>
    <div id="saturday_standard_swig" class="modal hide fade">
      <div class="modal-header">
        <a class="close" data-dismiss="modal"><b>x</b></a>
        <h4>Standard Swig on Saturday</h4>
      </div>
      <div class="modal-body well">
        <%= simple_form_for(@swig, url: bars_create_swig_path, html: { :class => "form-horizontal", id: "standart"}) do |f| %>
          <%= f.input :swig_type, as: :hidden, input_html: {value: "Standard"} %>
          <%= f.input :swig_day, as: :hidden, input_html: {value: "Saturday"} %>
          <%= f.input :deal, as: :text, :label => false, input_html: { style: "width: 300px;height: 100px" } %>
        </div>
        <div class="modal-footer">
          <a class="close" data-dismiss="modal"><b></b></a>
          <%= f.submit "Done", class: "btn-primary pull-right" %>
          </div>
        <% end %>
      </div>


      <div id="saturday_big_swig" class="modal hide fade">
        <div class="modal-header">
          <a class="close" data-dismiss="modal"><b>x</b></a>
          <h4>Big Swig on Saturday</h4>
        </div>
        <div class="modal-body well">
          <div id="saturday_notice_lists" style="color: green;"></div>
          <div class="span8">
            <%= simple_form_for(:big_swig_list, url: bars_add_bigswig_list_path, html: {:class => "form-horizontal", remote: true}) do |f| %>
              <div id="add_list">
                <%= f.input :big_swig, label: false, input_html: {style: "margin-left: -170px;width: 380px;"} %>
              </div>
              <%= f.submit "Add to List", class: "btn-success pull-right", style: "margin-top: -45px;", onclick: "saturday_clear_list()" %>

              <% end %>
            </div>
            <%= simple_form_for(:swig, url: bars_create_big_swig_path, html: { :class => "form-horizontal", id: "standart"}) do |f| %>
              <% 3.times do |x| %>
            <%#= text_area_tag "deals[]", nil, rows: 2, cols: 105 %>
            <%#= text_area_tag "deals[]", nil,  style: "width: 500px; height: 23px;margin-bottom: 3px;" %>
            <%#= text_area_tag "deals[]", nil,  style: "width: 500px; height: 23px;margin-bottom: 3px;" %>
