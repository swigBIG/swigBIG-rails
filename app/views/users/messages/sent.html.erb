<div class="container-fluid">
  <div class="row-fluid" style="margin-top: 15px">
    <%= content_for :side do %>
      <%= render "message_menu" %>
    <% end %>
    <div class="span8">
      <h2>Sent Message</h2>
      <ul class="tabs" data-tabs="tabs">
        <li class="active"><a href="#all_user" data-toggle="tab"><h4>All Users</h4></a></li>
        <li><a href="#last_visit" data-toggle="tab"><h4>Last Visit</h4></a></li>
        <li><a href="#almost_rewarded" data-toggle="tab"><h4>Almost Rewarded</h4></a></li>
        <li><a href="#unused_rewards" data-toggle="tab"><h4>Unused Rewards</h4></a></li>
      </ul>
      <div class="tab-content">
        <div class="tab-pane active" id="all_user">
          <%= form_tag custom_action_bars_messages_path, :id => "message_action_form" do  %>
            <table class="table">
              <thead>
                <tr>
                  <td colspan="4">
                    <%= select_tag "options_action", options_for_select([["Options", "0"],["Check All", "1"],["Uncheck All", "2"]]) %>
                    <%= select_tag "custom_action", options_for_select([["Action", "0"],["Mark as read", "1"],["Mark as unread", "2"],["Delete", "3"]]) %>
                  </td>
                </tr>
              </thead>
              <tbody>
                <% @messages_all_user.each do |message| %>
                  <tr style="cursor: pointer;background-color: <%= message.opened ? "white" : "darkgrey" %>">
                    <td class="span2"><%= check_box_tag "message_ids[]", message.id, false, :class => "checkbox" %></td>
                    <td class="span7"><%#= message.received_messageable.name %></td>
                    <td class="span10" onclick="window.location.href='<%= bars_message_url(message) %>'"><b><%= message.topic %></b> - <%= truncate(strip_tags(message.body.html_safe), length: 40) %></td>
                    <td class="span4" onclick="window.location.href='<%= bars_message_url(message) %>'"><%= message.created_at.strftime("%b %d, %Y") %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
  <%#= paginate @messages %>
          <% end %>
        </div>

        <div class="tab-pane" id="last_visit">
