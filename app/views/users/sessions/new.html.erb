<h2>Sign in</h2>

<%= simple_form_for(resource, :as => resource_name, :url => user_session_path) do |f| %>

  <%= f.input :email  %>
  <%= f.input :password  %>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  <% end -%>

    <div class="form-actions"><%= f.submit "Sign in" %></div>
<% end %>

<%= render "links" %>