<div class="modal-header">
  <a class="close" data-dismiss="modal" style="margin-right: 10px;"><b>x</b></a>

  <h3 style="text-align: center;"><%= "#{@bar.name} swiggers" %></h3>
</div>
<div class="modal-body well">
  <% unless @swigers.blank? %>
    <% @swigers.each do |swiger| %>
    <%#= @swigers.today.each do |swiger| %>
  <div class="span2" style="text-align: center;margin: -5px">
        <%= swiger.user.avatar.blank? ? image_tag("UserImage.gif", style: "height: 50px;") : image_tag(swiger.user.avatar_url(:mini)) %>
        <br/>
        <%= swiger.user.name %>
        <br/>
        <%= format_date_global(swiger.created_at) %>
      </div>
    <% end %>
  <% end %>
</div>
<div class="modal-footer">
  <a class="btn pull-right" data-dismiss="modal">Close</a>
</div>
