<script type="text/javascript">
  $(document).ready(function(){
    // Smart Wizard
    $('#wizard').smartWizard({
      transitionEffect:'slide',
      enableAllSteps: true,
      hideButtonsOnDisabled: false
    });
    $('.actionBar').hide();
    $('.chzn-select').chosen();
  });
</script>
